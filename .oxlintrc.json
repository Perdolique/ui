{
  "$schema": "./node_modules/oxlint/configuration_schema.json",

  "extends": [
    "./node_modules/eslint-config-greenpie/configs/oxlintrc.jsonc"
  ],

  "rules": {
    "import/no-unassigned-import": ["error", {
      "allow": [
        "@ui/theme",
        "**/*.css"
      ]
    }]
  },

  "overrides": [{
    "files": [
      "**/eslint.config.js",
      "**/stylelint.config.js",
      "**/vite.config.ts",
      "packages/*/index.ts"
    ],

    "rules": {
      "import/no-default-export": "off"
    }
  }]
}
