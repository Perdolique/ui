{
  "extends": "@vue/tsconfig/tsconfig.dom.json",

  "compilerOptions": {
    "lib": ["ES2024"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },

  "include": [
    "index.ts",
    "vite.config.ts",
    "src/**/*.vue"
  ]
}
